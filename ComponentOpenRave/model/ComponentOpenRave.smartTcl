(defun transformPoseToPoint (x y z yaw pitch roll xt yt zt)
  (let ((xp nil)(yp nil)(zp nil))
    (setf xp
      (- (+ x
            (* zt
               (+ (* (sin roll) (sin yaw))
                  (* (cos roll) (cos yaw) (sin pitch))))
            (* xt
               (* (cos pitch) (cos yaw))))
         (* yt
            (- (* (cos roll) (sin yaw))
               (* (cos yaw) (sin pitch) (sin roll))))))
    (setf yp
      (- (+ y    
            (* yt
               (+ (* (cos roll) (cos yaw))
                  (* (sin pitch) (sin roll) (sin yaw))))
            (* xt
               (* (cos pitch) (sin yaw))))
          (* zt
             (- (* (cos yaw) (sin roll))
                (* (sin pitch) (cos roll) (sin yaw))))))
    (setf zp
      (- (+ z
            (* zt
               (* (cos pitch) (cos roll)))
            (* yt
               (* (cos pitch) (sin roll))))
         (* xt
            (sin pitch))))
    `(,xp ,yp ,zp)))
